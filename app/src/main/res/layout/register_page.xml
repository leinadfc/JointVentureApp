<?xml version="1.0" encoding="utf-8"?>
<!-- Main container, background color defined here -->
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Activities.RegisterActivity"
    android:orientation="vertical"
    android:background="@color/MainBlue"
    android:gravity="center_horizontal">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_ada"/>
    </RelativeLayout>

    <!-- Username+Password+Icons container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"

        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" >

        <!-- Name Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            >

            <!-- Name Icon -->
            <TextView
                android:id="@+id/NameRegisterIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="5dp"

                android:text="&#xf14b;"
                android:textSize="18sp"
                app:fontFamily="@font/fontawesome"
                android:textColor="@color/White"/>

            <!-- Username EditText -->
            <EditText
                android:id="@+id/NameRegisterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:backgroundTint="@android:color/transparent"
                android:gravity="left"
                android:hint="@string/Name"
                android:textCursorDrawable="@color/White"/>
        </LinearLayout>

        <!-- Separation Line between Username and Password -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_marginTop="-15dp"/>

        <!-- Username container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            >

            <!-- User Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="6dp"
                android:text="&#xf0e0;"
                android:textSize="16sp"
                app:fontFamily="@font/fontawesome"
                android:textColor="@color/White"/>

            <!-- Username EditText -->
            <EditText
                android:id="@+id/LoginTextRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/White"
                android:textColorHint="@color/White"
                android:backgroundTint="@android:color/transparent"
                android:gravity="left"
                android:hint="@string/CreateUsername"
                android:textCursorDrawable="@color/White"/>
        </LinearLayout>

        <!-- Separation Line between Username and Password -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_marginTop="-15dp"/>

        <!-- Password container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <!-- Password icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:layout_marginRight="6dp"

                android:text="&#xf023;"
                android:textSize="18sp"
                app:fontFamily="@font/fontawesome"
                android:textColor="@color/White"/>

            <!-- Password EditText-->
            <EditText
                android:id="@+id/PasswordTextRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/White"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/CreatePassword"
                android:textColorHint="@color/White"
                android:gravity="left"
                android:textCursorDrawable="@color/White"/>
        </LinearLayout>

        <!-- Separation Line between Username and Password -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_marginTop="-15dp"/>

        <!-- Repeat Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <!-- Password icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:layout_marginRight="6dp"

                android:text="&#xf023;"
                android:textSize="18sp"
                app:fontFamily="@font/fontawesome"
                android:textColor="@color/White"/>

            <!-- Password EditText-->
            <EditText
                android:id="@+id/RepeatPasswordTextRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/White"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/RepeatPassword"
                android:textColorHint="@color/White"
                android:gravity="left"
                android:textCursorDrawable="@color/White"/>
        </LinearLayout>

        <!-- Separation Line between Username and Password -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:layout_marginTop="-15dp"/>

        <!-- Login Button + Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="35dp">

            <Button
                android:id="@+id/SignupButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_functionality"
                android:gravity="center"
                android:text="@string/SignUp"
                android:textColor="@color/White"
                android:textColorHint="@color/MainBlue"
                />


        </RelativeLayout>

    </LinearLayout>






    <!-- Istagram facebook about us -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <!-- Facebook icon -->
        <TextView
            android:id="@+id/facebookiconreg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&#xf09a;"
            android:textSize="35sp"
            app:fontFamily="@font/fontawesome"
            android:textColor="@color/White" />

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <!-- Instagram Icon -->
        <TextView
            android:id="@+id/instagramiconreg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&#xf16d;"
            android:textSize="35sp"
            app:fontFamily="@font/fontawesome"
            android:textColor="@color/White" />



    </LinearLayout>


</LinearLayout>