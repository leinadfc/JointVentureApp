<?xml version="1.0" encoding="utf-8"?>
<!-- Main container, background color defined here -->
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/calendar_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CalendarActivity"
    android:background="@color/White"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/midCalRel">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mspinner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/yspinner"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yspinner"
                android:layout_gravity="top"
                android:gravity="top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mspinner"
                app:layout_constraintRight_toLeftOf="@id/symptombtn"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cogwheel_outline"
                android:id="@+id/symptombtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/yspinner"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                android:id="@+id/horizontal_line"
                app:layout_constraintTop_toBottomOf="@id/mspinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calendarlist"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/botCalRel"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavCal"
                android:background="@drawable/dtrial"
                app:menu="@menu/main_menu"
                app:labelVisibilityMode="unlabeled">
            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>