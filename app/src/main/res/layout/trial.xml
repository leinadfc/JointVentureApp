<?xml version="1.0" encoding="utf-8"?>
<!-- Main container, background color defined here -->
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/add_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Activities.AddActivity"
    android:gravity="center_horizontal">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/botRelAdd"
            android:id="@+id/midRelAdd">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layoutbw"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <!-- Day Container -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/daytext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DAY"
                            android:textAlignment="center"
                            android:textSize="70sp"
                            android:textColor="@color/MainBlue"/>

                    </RelativeLayout>

                    <!-- Month and year  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Month -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="1dp">

                            <TextView
                                android:id="@+id/monthtext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Month"
                                android:textSize="25sp"/>
                        </RelativeLayout>

                        <!-- Year -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="1dp">

                            <TextView
                                android:id="@+id/yeartext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Year"
                                android:textSize="25sp"/>
                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>

                <!-- Concentration  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Text -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Concentration"
                            android:textSize="20sp"/>
                    </RelativeLayout>

                    <!-- Edittext -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/concentrationtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/TypeConcentration"
                            android:textSize="20sp"
                            android:inputType="number"
                            android:backgroundTint="@color/MainBlue"
                            android:textColor="@color/MainBlue"
                            android:cursorVisible="false"/>
                    </RelativeLayout>

                </LinearLayout>

                <!-- Symptom Spinners -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="1dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/symptom1text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symptom 1"
                        android:textSize="20sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:weightSum="100"
                    android:layout_marginTop="10dp">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableTop="@android:drawable/btn_radio"
                            android:checked="false"
                            android:tag="1"
                            android:textSize="0sp"/>

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableTop="@android:drawable/btn_radio"
                            android:checked="false"
                            android:tag="1"
                            android:textSize="0sp"/>
                        <RadioButton
