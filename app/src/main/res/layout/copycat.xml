<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/concchart"
        android:layout_marginTop="20dp">

    </com.github.mikephil.charting.charts.BarChart>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonx"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/layoutcal2">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/graphsMonthSpinner"
                    >

                </Spinner>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/graphsYearSpinner">

                </Spinner>

            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/concchart"
                android:layout_marginTop="20dp"
                android:background="@color/VLightGrey"
                android:padding="50dp">

            </com.github.mikephil.charting.charts.BarChart>




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/gradient"/>

        </RelativeLayout>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonx"
        >








        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:id="@+id/goodlayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_bigbtn">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:background="@color/MainBlue"
                    android:text="@string/PlusSign"
                    android:textColor="@color/White"
                    android:textSize="50sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:text="&#xf073;"
                    android:fontFamily="@font/fontawesome"
                    android:textColor="@color/White"
                    android:textSize="30sp"
                    android:background="@drawable/utility_button_grey"
                    android:id="@+id/btn2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:text="&#xf0f1;"
                    android:fontFamily="@font/fontawesome"
                    android:textColor="@color/White"
                    android:textSize="30sp"
                    android:background="@drawable/utility_button_grey"
                    android:id="@+id/btn3"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/layout4">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:text="&#xf080;"
                    android:fontFamily="@font/fontawesome"
                    android:textColor="@color/White"
                    android:textSize="30sp"
                    android:background="@drawable/utility_button_grey"
                    android:id="@+id/btn4"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>